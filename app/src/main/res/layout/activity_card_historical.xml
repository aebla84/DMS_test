<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/cardlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/block1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/card_paddingBottom"
            android:paddingLeft="@dimen/card_paddingLeft"
            android:paddingRight="@dimen/card_paddingRight"
            android:paddingTop="@dimen/card_paddingTop">

            <TextView
                android:id="@+id/symbolOrder"
                style="@style/titleAvenirFont_Pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="#" />

            <TextView
                android:id="@+id/idorder"
                style="@style/titleAvenirFont_Pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/symbolOrder"
                android:hint="@string/orderHistorical" />

            <TextView
                android:id="@+id/date"
                style="@style/titleAvenirFont_Pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/orderDay" />

            <TextView
                android:id="@+id/money"
                style="@style/secondTitleAvenirFont_pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/symbole"
                android:hint="1" />
            <TextView
                android:id="@+id/symbole"
                style="@style/secondTitleAvenirFont_pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="â‚¬" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>